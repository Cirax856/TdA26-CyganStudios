@page "/dashboard/course/{courseUuid}/materials/{materialUuid}/edit_url"
@model TdA26_CyganStudios.Pages.Dashboard.Course.EditUrlMaterialModel
@{
	ViewData["Title"] = "Edit Url Material";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
	<div class="col-md-4">
		<section>
			<form method="post">
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Name" class="form-control md-width" aria-required="true" placeholder="name" />
					<label asp-for="Input.Name" class="form-label">Name</label>
					<span asp-validation-for="Input.Name" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Description" class="form-control md-width" aria-required="true" placeholder="description" />
					<label asp-for="Input.Description" class="form-label">Description</label>
					<span asp-validation-for="Input.Description" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Url" class="form-control md-width" aria-required="true" placeholder="material url" />
					<label asp-for="Input.Url" class="form-label">Material url</label>
					<span asp-validation-for="Input.Url" class="text-danger"></span>
				</div>
				<div class="form-check mb-3 border border-danger p-3 rounded">
					<input asp-for="Input.SkipUrlVerification" class="form-check-input" type="checkbox" id="skipCheck">
					<label class="form-check-label text-danger fw-bold" for="skipCheck">
						Skip URL verification (not recommended)
					</label>
					<div class="form-text text-danger">
						Only use this if you know the URL is correct but the system says it's invalid.
					</div>
				</div>
				<div>
					<button id="create-submit" type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
				</div>
			</form>
		</section>
	</div>
</div>

<script>
	document.getElementById("skipCheck").addEventListener("change", function (e) {
		if (this.checked) {
			if (!confirm("Are you sure you want to skip URL verification?")) {
				this.checked = false;
			}
		}
	});
</script>
