@model CourseFeedPreviewModel;

@{
    string allFeedPage;
    if (Model.Editable)
    {
        allFeedPage = "/Dashboard/Course/Feed/Index";
    }
    else
    {
        allFeedPage = "/Courses/Feed";
    }

    var allItems = Model.Items
    .OrderByDescending(x => x.CreatedAt)
    .ToList();

    var totalCount = allItems.Count;

    var showViewAllCard = totalCount > Model.MaxPreviewCount;

    var itemsToShow = showViewAllCard
    ? allItems.Take(Model.MaxPreviewCount - 1)
    : allItems.Take(Model.MaxPreviewCount);
}

<div class="mt-4 border rounded p-3 md-width">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center gap-3">
            <a asp-page="@allFeedPage" asp-route-courseUuid="@Model.CourseId" class="text-decoration-none fs-4">
                <h3 class="mb-0">Activity</h3>
            </a>

            @if (Model.Editable)
            {
                <div class="dropdown">
                    <button class="btn btn-primary" type="button">
                        <a class="dropdown-item" asp-page="/Dashboard/Course/Feed/NewPost"
                            asp-route-courseUuid="@Model.CourseId">
                            + New post
                        </a>
                    </button>
                </div>
            }
        </div>

        <a asp-page="@allFeedPage" asp-route-courseUuid="@Model.CourseId" class="text-decoration-none fs-4">
            &gt;
        </a>
    </div>

    <div id="feed-container" class="d-flex flex-column gap-3" data-max="@Model.MaxPreviewCount"
        data-total="@totalCount">

        @if (!itemsToShow.Any())
        {
            <div class="card text-center py-5">
                <div class="card-body">
                    <i class="bi bi-chat-left-text h1 text-muted"></i>
                    <h5 class="mt-3 mb-1">No Activity Yet</h5>
                    <p class="text-muted mb-0">Updates will appear here.</p>
                </div>
            </div>
        }
        else
        {
            foreach (var item in itemsToShow)
            {
                <partial name="_FeedItemCard" model="new FeedItemCardModel(item, Model.Editable)" />
            }
        }

        <div id="view-all-card" class="card text-center view-all-feed"
            style="display: @(showViewAllCard ? "block" : "none");">
            <div class="card-body py-4">
                <a asp-page="@allFeedPage" asp-route-courseUuid="@Model.CourseId"
                    class="stretched-link text-decoration-none text-body">

                    <i class="bi bi-collection h4"></i>
                    <h6 class="mt-2 mb-0">View all</h6>
                </a>
            </div>
        </div>
    </div>
</div>