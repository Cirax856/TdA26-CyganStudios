@model QuizzesPreviewGridModel;

@{
    string allQuizzesPage;
    if (Model.Editable)
    {
        allQuizzesPage = "/Dashboard/Course/Quizzes";
    }
    else
    {
        allQuizzesPage = "/Courses/Quizzes";
    }
}

<div class="mt-4 border rounded p-3 md-width">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center gap-3">
            <a asp-page="@allQuizzesPage" asp-route-courseUuid="@Model.CourseUuid" class="text-decoration-none fs-4">
                <h3 class="mb-0">Quizzes</h3>
            </a>

            @if (Model.Editable)
            {
                <div class="dropdown">
                    <button class="btn btn-primary" type="button"> <a class="dropdown-item"
                            asp-page="/Dashboard/Course/NewQuiz" asp-route-courseUuid="@Model.CourseUuid">
                            + New
                        </a>
                    </button>
                </div>
            }
        </div>

        <a asp-page="@allQuizzesPage" asp-route-courseUuid="@Model.CourseUuid" class="text-decoration-none fs-4">
            &gt;
        </a>
    </div>

    <div class="container px-0">
        @{
            var allQuizzes = Model.Quizzes.OrderByDescending(quiz => quiz.CreatedAt);
            var totalMaxQuizzes = Model.Quizzes.Count;

            var showViewAllQuizzesCard = totalMaxQuizzes > Model.MaxPreviewCount;

            var quizzesToShow = showViewAllQuizzesCard
            ? allQuizzes.Take(Model.MaxPreviewCount - 1)
            : allQuizzes.Take(Model.MaxPreviewCount);
        }
        <div class="row">
            @if (!quizzesToShow.Any())
            {
                <div class="col-12">
                    <div class="card text-center py-5">
                        <div class="card-body">
                            <i class="bi bi-folder-x h1 text-muted"></i>
                            <h5 class="mt-3 mb-1">No Quizzes Yet</h5>
                            <p class="text-muted mb-0">Add a quiz to get started.</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                @foreach (var quiz in quizzesToShow)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                        <partial name="_QuizCard" model="new QuizCardModel(quiz, Model.CourseUuid, Model.Editable)" />
                    </div>
                }
            }

            @if (showViewAllQuizzesCard)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                    <div class="card h-100">
                        <div class="card-body d-flex align-items-center justify-content-center text-center">
                            <a asp-page="@allQuizzesPage" asp-route-courseUuid="@Model.CourseUuid"
                                class="text-decoration-none stretched-link text-body">

                                <i class="bi bi-collection h3"></i>
                                <h5 class="card-title mb-0 mt-2">View All</h5>
                                <p class="card-text text-muted small">(@totalMaxQuizzes total)</p>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>