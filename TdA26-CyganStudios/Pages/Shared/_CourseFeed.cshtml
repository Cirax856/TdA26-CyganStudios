@model CourseFeedModel;

@{
    string allFeedPage;
    if (Model.Editable)
    {
        allFeedPage = "/Dashboard/Course/Feed/Index";
    }
    else
    {
        allFeedPage = "/Courses/Feed";
    }

    var allItems = Model.Items
    .OrderByDescending(x => x.CreatedAt)
    .ToList();
}

<div class="mt-4 border rounded p-3 md-width">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center gap-3">
            <h3 class="mb-0">Activity</h3>

            @if (Model.Editable)
            {
                <div class="dropdown">
                    <button class="btn btn-primary" type="button">
                        <a class="dropdown-item" asp-page="/Dashboard/Course/Feed/NewPost" asp-route-courseUuid="@Model.CourseId">
                            + New post
                        </a>
                    </button>
                </div>
            }
        </div>
    </div>

    <div id="feed-container" class="d-flex flex-column gap-3">
        @if (!allItems.Any())
        {
            <div id="no-activity-yet-card" class="card text-center py-5">
                <div class="card-body">
                    <i class="bi bi-chat-left-text h1 text-muted"></i>
                    <h5 class="mt-3 mb-1">No Activity Yet</h5>
                    <p class="text-muted mb-0">Updates will appear here.</p>
                </div>
            </div>
        }
        else
        {
            foreach (var item in allItems)
            {
                <partial name="_FeedItemCard" model="new FeedItemCardModel(item, Model.Editable)" />
            }
        }
    </div>
</div>